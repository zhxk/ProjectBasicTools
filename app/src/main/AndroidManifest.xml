<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ks.projectbasictools">
    <!-- 网络请求权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取网络改变的状态的请求权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" /> <!-- 调整系统设置权限 -->
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SecondActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme" />
        <activity
            android:name=".CustomStartActActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme" />
        <activity
            android:name=".CustomToastActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme" />
        <activity
            android:name=".CustomStatusActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".publicView.NoNetworkActivity"
            android:launchMode="singleTop"
            android:theme="@style/activityTheme" />
        <activity
            android:name=".publicView.TitleVarView"
            android:launchMode="singleTop" />
    </application>

</manifest>